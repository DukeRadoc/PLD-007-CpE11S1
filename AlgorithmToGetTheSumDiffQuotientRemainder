#include <iostream>
using namespace std;

int main()
{
	//local variables
	int num1=0, num2=0, num3=0, num4=0, average=0, sum=0, difference=0, quotient=0, remainder=0;
	
	cout<<"input num1:"; cin>>num1;
	cout<<"input num2:"; cin>>num2;
	cout<<"input num3:"; cin>>num3;
	
	//calculation of average
	  average=(num1+num2+num3)/3.0;
  	//calculation of sum
    sum=(num1+num2+num3);
  	//calculation of difference
  	difference=(num1-num2-num3);
  	//calculation of quotient
    quotient=(num1)/(num2)/(num3);
  	// calculation of remainder
    remainder=(num1%num2%num3);
		
	//print the results
	cout<<"the input average is "<<average ;
	//print the results
	cout<<"the input sum is "<<sum ;
	//print the results
	cout<<"the input difference is "<<difference ;
 	//print the results
  cout<<"the input quotient is "<<quotient ;
  	//print the results
  cout<<"the input remainder is "<<remainder ;
	
	return 0;
}
